<div class="row justify-content-md-center game-container ">
    <div class="col-xs-12">
        <div class="row justify-content-md-center">
            <div class="col-sm-10 col-md-8  question-container rounded">
                <div class="row the-question-container">
                    <div class="col-12 ">
                        <div class="question-number">
                            <h4>{{question_number}} / {{total}}</h4>
                        </div>
                        <h2 class="question"> {{question}}</h2>
                        <p class="timer">10</p>
                    </div>
                </div>
                <div class="row answers-container equal">
                    {{#each answers}}
                         <div class=" col-sm-12 col-md-6">
                        <div class="answer">
                            {{answer}}
                        </div>
                    </div>
                    {{/each}}
                   

                </div>
            </div>
        </div>
    </div>
</div>